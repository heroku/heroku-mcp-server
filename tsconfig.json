{
  "compilerOptions": {
    "importHelpers": true,
    "inlineSourceMap": false,
    "lib": ["ES2024"],
    "module": "nodenext",
    "moduleResolution": "Node16",
    "target": "ES2022",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUncheckedSideEffectImports": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": false,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["src/**/*", "bin/**/*"],
  "exclude": ["dist", "node_modules"]
}
