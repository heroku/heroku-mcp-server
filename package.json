{
  "name": "@heroku/mcp-server",
  "description": "Heroku Platform MCP Server",
  "version": "1.1.0",
  "author": "Heroku",
  "bugs": "https://github.com/heroku/heroku-mcp-server/issues",
  "bin": {
    "heroku-mcp-server": "bin/heroku-mcp-server.mjs"
  },
  "type": "module",
  "dependencies": {
    "@heroku-cli/schema": "^2.0.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "cheerio": "^1.2.0",
    "jsonschema": "^1.5.0",
    "node-fetch": "^3.3.2",
    "tar-stream": "^3.1.7",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "^2.1.2",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/chai": "^5.2.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.x",
    "@types/sinon": "^21.0.0",
    "@types/tar-stream": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "eslint-config-salesforce-typescript": "^4.0.1",
    "eslint-plugin-jsdoc": "^62.5.4",
    "husky": "^9.1.7",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "prettier": "^3.8.1",
    "shx": "^0.4.0",
    "sinon": "^21.0.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20"
  },
  "exports": {
    "./*": {
      "import": "./dist/esm/*",
      "require": "./dist/cjs/*"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/esm/*"
      ]
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "homepage": "https://github.com/heroku/heroku-mcp-server",
  "keywords": [
    "heroku",
    "mcp"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heroku/heroku-mcp-server.git"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && npm run exec-perms",
    "build:dev": "rm -rf dist && tsc --sourceMap -p tsconfig.json && npm run exec-perms",
    "build:watch": "tsc --sourceMap -p tsconfig.json -w",
    "build:mcpb": "mcpb pack",
    "start": "node bin/heroku-mcp-server.mjs",
    "format": "prettier . --write --config ./.prettier.mjs",
    "lint": "cd src && eslint ./",
    "posttest": "npm run lint",
    "prepare": "husky",
    "pretest": "npm run build",
    "type-check": "tsc --noEmit",
    "test": "nyc mocha --forbid-only",
    "exec-perms": "shx chmod +x dist/*.js",
    "test:watch": "nyc mocha --watch --forbid-only",
    "publish": "npm run build && npm run build:mcpb && npm publish"
  }
}
